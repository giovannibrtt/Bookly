<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- sombra -->
    <item android:bottom="4dp" android:left="2dp" android:right="2dp" android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#55000000" /> <!-- sombra preta translúcida -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- fundo do botão -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3C8D84" /> <!-- cor do botão -->
            <corners android:radius="30dp" />
        </shape>
    </item>

</layer-list>
